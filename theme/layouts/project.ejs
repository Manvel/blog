<!DOCTYPE html>
<html lang="en">
  <head>
    <% include head/_index %>
  </head>
  <body>
    <header>
      <% include _header %>
    </header>
    <main>
      <% page.body %>
      <% const posts = site.queryPages((data) => data.category == "project").sort((a, b) => new Date(b.date) - new Date(a.date)) %>
      <% posts.forEach(function(post) { %>
        <article>
          <h2>
            <a href="/<%- post.pathname %>" class="post-title"><%= post.title %></a>
          </h2>
          <% if(post.summary) { %>
            <p><%= post.summary %></p>
          <% } else { %>
            <p><%= post.description %></p>
          <% } %>
          <footer>
            <%- include("_meta-post", {page: post}) %>
          </footer>
        </article>
      <% }); %>
    </main>
  </body>
</html>
