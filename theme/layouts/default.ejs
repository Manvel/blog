<!DOCTYPE html>
<html lang="en">
  <head>
    <% include head/_meta %>
    <% include head/_styles %>
    <% include head/_ga %>
  </head>
  <body class="post">
    <header>
      <% include _navigation %>
    </header>
      <main>
        <article>
          <h1><%= page.title %></h1>
          <% include _meta-post %>
          <%- page.body %>
          <% if (!page.noshare) { %>
            <h2>Share:
              &nbsp; <% site.shareButtons.forEach(({name, image, path}) => { %>
                <a href="<%= path %><%= site.domain %><%= page.pathname %>" class="social"><img src="<%= image %>"></a>
              <% }); %>
            </h2>
          <% } %>
        </article>
      </main>
      <aside>
        <% if (page.author) { %>
          <% include author/_post %>
        <% } %>
      </aside>
  </body>
</html>
