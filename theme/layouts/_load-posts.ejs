<% posts.forEach(function(post) { %>
  <% if (post.pathname.startsWith("_") && !site.draft) return; %>
  <article>
    <a href="<%- post.pathname %>" class="post-title">
      <h2><%= post.title %></h2>
    </a>
    <% if(post.summary) { %>
      <p><%= post.summary %></p>
    <% } else { %>
      <p><%= post.description %></p>
    <% } %>
    <footer>
      <%- include("_meta-post", {page: post}) %>
    </footer>
  </article>
<% }); %>
