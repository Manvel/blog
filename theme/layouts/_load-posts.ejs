<% posts.forEach(function(post) { %>
  <% if (/(^_|\/_)/.test(post.pathname) && site.draft != true) return; %>
  <article>
    <h2>
      <a href="<%- post.pathname %>" class="post-title"><%= post.title %></a>
    </h2>
    <% if(post.summary) { %>
      <p><%= post.summary %></p>
    <% } else { %>
      <p><%= post.description %></p>
    <% } %>
    <footer>
      <%- include("_meta-post", {page: post}) %>
    </footer>
  </article>
<% }); %>
