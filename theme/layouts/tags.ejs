<!DOCTYPE html>
<html lang="en">
  <head>
    <% include head/_index %>
  </head>
  <body>
    <header>
      <div class="justify-between">
        <% include author/_blog %>
        <% include hamburger %>
      </div>
      <nav class="tablet-hide">
        <% include _navigation %>
      </nav>
    </header>
    <main>
      <% const tag = page.pathname.replace("tag/", "").toLowerCase(); %>
      <% const posts = site.queryPages((data) => data.tags && data.tags.includes(tag)).sort((a, b) => new Date(b.date) - new Date(a.date)) %>
      <%- include("_load-posts", {posts}) %>
    </main>
  </body>
</html>
